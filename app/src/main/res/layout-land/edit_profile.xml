<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Profile"
    android:paddingLeft="@dimen/paddingLeftRight"
    android:paddingRight="@dimen/paddingLeftRight"
    >

    <ImageView
        android:id="@+id/editImageProfile"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:id="@+id/nameProfile"
                android:textSize="@dimen/profile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameProfile"
                android:textColor="@android:color/darker_gray"
                />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/mailProfile"
                android:textSize="@dimen/profile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mailProfile"
                android:textColor="@android:color/darker_gray"
                />

            <EditText
                android:id="@+id/editMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Insert your name"
                android:inputType="textCapSentences|textAutoCorrect" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/bioProfile"
                android:textSize="@dimen/profile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bioProfile"
                android:textColor="@android:color/darker_gray"
                />

            <EditText
                android:id="@+id/editBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Insert your name"
                android:inputType="textCapSentences|textAutoCorrect" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>