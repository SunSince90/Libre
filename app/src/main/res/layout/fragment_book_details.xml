    <android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.viewbook.BookDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="The Stand"
                android:textColor="@color/colorPrimary"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Stephen King"
                android:fontFamily="@font/opensans_light"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:shadowRadius=".5"
                android:textSize="20sp"
                tools:text="By Stephen King" />

            <LinearLayout
                android:id="@+id/goodReadsReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:fontFamily="@font/opensans_light"
                    android:text="3.4"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:isIndicator="true"
                        app:mrb_progressTint="#f7ec1d"
                        android:numStars="5"
                        android:rating="3.4"
                        android:stepSize=".1" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From 5532 ratings from GoodReads"
                        android:fontFamily="@font/opensans_light"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:textColor="@color/cardview_dark_background" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_light"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="206 Views"
                android:textColor="@color/cardview_dark_background"
                android:textSize="19sp" />

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/bookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce scelerisque, odio vitae ullamcorper efficitur, erat sapien venenatis diam, quis mattis nisi odio vel ligula. Pellentesque id nibh sed felis dictum tincidunt id sit amet felis. Duis pharetra massa nec nibh consectetur mattis. Nulla molestie urna vitae venenatis commodo. Vestibulum et elementum nisl. Praesent venenatis erat et commodo fringilla. Etiam semper ultricies eros, ac vulputate sem venenatis ut.

Nulla in lectus ligula. Vivamus porta sollicitudin nibh, quis facilisis nisi lacinia quis. Duis fringilla tortor a consectetur pretium. Curabitur eu justo et urna vulputate faucibus. Integer ultrices porta nulla sit amet elementum. Nullam eu ullamcorper turpis, sed viverra erat. Aliquam aliquet, diam sit amet tincidunt tristique, eros augue commodo dui, venenatis gravida leo nunc ut turpis. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent vehicula lectus nec lacinia ultricies. Morbi est velit, congue quis ornare ut, elementum sit amet magna. "
                android:textColor="@color/black"
                android:textSize="16sp"
                app:showTrimExpandedText="false"
                app:trimCollapsedText="More..."
                app:trimLines="7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ISBN:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123456789012"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2016"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editor"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Penguin"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    </android.support.v4.widget.NestedScrollView>
